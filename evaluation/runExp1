testserverIP=127.0.0.1
echo "Server internal IP " $testserverIP

for num in $(eval echo {0..0..1})
do
    echo $num
    temp=`expr $num + 1`
    result=`expr 1000 \* $temp`
    rm ../HostAgent/logs/*
    cd ec2scripts
    ./startHoneAgent &
    for port in $(eval echo {9001..`expr 9001 + $num`..1})
    do
        ../test_prog/test_prog $testserverIP $port 1000 &> /dev/null &
    done
    sleep 5m
    killall python
    killall test_prog
    #cd ../HostAgent
    #file=`ls logs/*.log`
    #cp $file ../evaluation/exp1data/conn$result.log
    #file=`ls logs/*.txt`
    #cp $file ../evaluation/exp1/cpumem_conn$result.txt
    #cd ../evaluation
    #python parseexp1.py exp1/conn$result.log
