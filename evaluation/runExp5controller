echo "run exp5 on controller"
job=exp_exp4q1

cd $HOME/hone
git pull

cd evaluation/ec2scripts
./adjustClock

cd ../../Controller
rm logs/*
echo $job
python hone_run.py $job &
sleep 10m

killall python

file=`ls logs/*.eval`
cp $file ../evaluation/exp5data/controller-temp.log
echo result transferred to exp5data

echo "done exp5 on controller"
