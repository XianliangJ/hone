echo "runExp6 on controller"
job=exp_exp6

sudo service rsyslog stop

cd $HOME/hone
git pull

cd evaluation/ec2scripts
./adjustClock

cd ../../Controller
rm logs/*
echo $job
python hone_run.py $job &
sleep 15m

killall python

cd logs
file=`ls *.eval`
cp $file ../../evaluation/exp6data/controller-temp.log

cd $HOME
cp exp6controller.log hone/evaluation/exp6data
echo "result transferred to exp6data"

echo "done exp6 on controller"
