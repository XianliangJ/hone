echo "runExp6 on controller"
job=exp_exp6 exp_evalCpuMemTp

cd $HOME/hone
git pull

cd evaluation/ec2scripts
./adjustClock

cd ../../Controller
rm logs/*
echo $job
python hone_run.py $job &
sleep 15m

killall python

file=`ls logs/*.eval`
cp $file ../evaluation/exp6data/controller-temp.log
echo "result transferred to exp6data"

echo "done exp6 on controller"
